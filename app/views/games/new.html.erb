<body>
  <div class="body-container">

    <h1 class="newgame">Longest Word Game</h1>

    <div class="letters">
      <% @letters.each do |letter| %>
        <p class="letter"><%= letter %></p>
      <% end %>
    </div>

    <p class="form-prefix">What is the longest word you can find?</p>

    <form action="/score" method="POST" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class ="form-group d-flex m-1">
        <input type="text" name="word" class="form-control">
        <input type="submit" value="Play" class="btn">
      </div>
    </form>

  </div>
</body>
