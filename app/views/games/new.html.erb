<body>
  <div class="container" style="text-align: center;">

    <h1 class="newgame mt-5">New game</h1>

    <div class="container mt-5">
      <% @letters.each do |letter| %>
        <p class="d-inline btn btn-primary align-middle"><%= letter %></p>
      <% end %>
    </div>

    <p class="form-prefix m-5">What is the longest word you can find?</p>

    <form action="/score" method="POST" class="form-inline">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <div class ="form-group d-flex m-2">
        <input type="text" name="word" class="form-control">
        <span class="input-group-btn">
          <input type="submit" value="Play" class="btn btn-primary">
        </span>
      </div>
    </form>

  </div>
</body>
